@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<header class="hero-section text-white text-center d-flex align-items-center">
    <div class="container">
        <h1 class="display-4 fw-bold">Welcome to Neosoft Leave Management</h1>
        <p class="lead">Effortless Leave Tracking for Employees & Managers</p>
        <a asp-controller="User" asp-action="Register" class="btn btn-light btn-lg mt-3 shadow-sm">Get Started</a>
    </div>
</header>

<!-- Features Section -->
<section class="container-fluid text-center mt-5">
    <h2 class="mb-4 fw-bold">Why Choose Us?</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="feature-box shadow-lg p-4 rounded">
                <i class="fas fa-calendar-alt fa-3x feature-icon"></i>
                <h4 class="fw-bold mt-3">Apply for Leave</h4>
                <p>Submit leave requests online with instant notifications.</p>
                <a asp-controller="LeaveRequest" asp-action="Apply" class="btn btn-outline-primary">Apply Now</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-box shadow-lg p-4 rounded">
                <i class="fas fa-user-check fa-3x feature-icon"></i>
                <h4 class="fw-bold mt-3">Manage Approvals</h4>
                <p>Managers can approve or reject leave requests efficiently.</p>
                <a asp-controller="LeaveApproval" asp-action="Index" class="btn btn-outline-success">Manage Requests</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-box shadow-lg p-4 rounded">
                <i class="fas fa-list-alt fa-3x feature-icon"></i>
                <h4 class="fw-bold mt-3">Track Leave History</h4>
                <p>Employees can track their leave balance and history.</p>
                <a asp-controller="LeaveRequest" asp-action="List" class="btn btn-outline-info">View History</a>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="about-section text-white text-center mt-5">
    <div class="container">
        <h2 class="fw-bold">About Neosoft Leave Management</h2>
        <p class="mt-3">
            Neosoft Leave Management is a seamless and efficient leave tracking system designed to help employees and managers
            streamline their leave management process. Whether you're requesting leave or managing approvals, our platform makes it
            easy and hassle-free.
        </p>
    </div>
</section>


<!-- Custom Styles -->
<style>
    /* Hero Section */
    .hero-section {
        /* margin: -100px; */
        /* margin-top: 1px; */
        /* margin-bottom: 100px; */
        background: url('/images/bg.jpg') no-repeat center center/cover;
        height: 80vh;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        text-shadow: 1px 1px 8px rgba(0, 0, 0, 0.7);
    }

        .hero-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
        }

        .hero-section .container {
            position: relative;
            z-index: 1;
        }

    /* Feature Boxes */
    .feature-box {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        background: white;
        border-radius: 10px;
    }

        .feature-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    .feature-icon {
        color: #007bff;
        transition: color 0.3s ease-in-out;
    }

    .feature-box:hover .feature-icon {
        color: #0056b3;
    }

    /* About Section */
    .about-section {
        background: linear-gradient(to right, #007bff, #6610f2);
        padding: 60px 0;
        border-radius: 10px;
    }

    /* Footer */
    .footer {
        background: #222;
        padding: 20px 0;
        margin-top: 50px;
    }
</style>

<!-- FontAwesome for Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
