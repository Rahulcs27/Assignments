@model Neosoft_LeaveManagement.Models.User
<div align="center">
<h2>Profile</h2>

<div class="card" style="width: 350px;">
    <div class="card-body text-center">
        <img src="@(!string.IsNullOrEmpty(Model.ProfilePicture) ? Model.ProfilePicture : "/images/default-user.png")"
             class="rounded-circle" width="150" height="150" alt="Profile Picture">

        <h4 class="mt-3">@Model.Name</h4>

        <table class="table mt-3">
            <tr>
                <th>Email:</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Role:</th>
                <td>@Model.Role</td>
            </tr>
        </table>

        <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Back to Home</a>
    </div>
</div>
</div>