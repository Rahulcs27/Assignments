@model Neosoft_LeaveManagement.ViewModels.RegisterViewModel

        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <!-- Left Side - Registration Form -->
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <div class="text-center">
                                    <h4 class="mt-1 mb-5 pb-1">Create Your Account</h4>
                                </div>

                                <form asp-action="Register" asp-controller="User" method="post" enctype="multipart/form-data">
                                    <p>Fill in the details to register</p>

                                    <!-- Name Input -->
                                    <div class="form-outline mb-4">
                                        <label class="form-label">Full Name</label>
                                        <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <!-- Email Input -->
                                    <div class="form-outline mb-4">
                                        <label class="form-label">Email</label>
                                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <!-- Password Input -->
                                    <div class="form-outline mb-4">
                                        <label class="form-label">Password</label>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <!-- Confirm Password Input -->
                                    <div class="form-outline mb-4">
                                        <label class="form-label">Confirm Password</label>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter your password" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <!-- ✅ Profile Picture Upload -->
                                    <div class="form-outline mb-4">
                                        <label class="form-label">Upload Profile Picture</label>
                                        <input asp-for="ProfilePicture" type="file" class="form-control" />
                                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="text-center pt-1 mb-5 pb-1">
                                <button type="submit" class="btn btn-outline-success ms-2">Register</button>
                                    </div>

                                    <!-- Redirect to Login -->
                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Already have an account?</p>
                                        <a asp-action="Login" asp-controller="User" class="btn btn-outline-success ms-2">Log in</a>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Right Side - Gradient Section -->
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">Join Neosoft Leave Management</h4>
                                <p class="small mb-0">Neosoft Leave Management is a platform designed to make leave tracking effortless for employees and managers. Apply, approve, and monitor leave requests seamlessly.</p>
                            </div>
                        </div>
                    </div> <!-- End of row -->
                </div> <!-- End of card -->
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
