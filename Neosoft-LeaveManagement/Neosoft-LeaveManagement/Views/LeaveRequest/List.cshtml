@model Neosoft_LeaveManagement.ViewModels.LeaveRequestListViewModel

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<!-- ✅ Display Leave Balance using Partial View -->
<partial name="_LeaveBalancePartial" model="Model.LeaveBalance" />

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.LeaveRequests.First().UserId)</th>
            <th>@Html.DisplayNameFor(model => model.LeaveRequests.First().LeaveType)</th>
            <th>@Html.DisplayNameFor(model => model.LeaveRequests.First().StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.LeaveRequests.First().EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.LeaveRequests.First().Reason)</th>
            <th>@Html.DisplayNameFor(model => model.LeaveRequests.First().Status)</th>
            <th>@Html.DisplayNameFor(model => model.LeaveRequests.First().AppliedDate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveRequests)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                <td>@Html.DisplayFor(modelItem => item.LeaveType)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Reason)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.AppliedDate)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
