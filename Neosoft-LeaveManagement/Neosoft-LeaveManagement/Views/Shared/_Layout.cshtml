@using Neosoft_LeaveManagement.Constants
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Neosoft_LeaveManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Neosoft_LeaveManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Neosoft LeaveManagement</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
                        {
                            var userRole = HttpContextAccessor.HttpContext.Session.GetInt32("UserRole");
                            var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName");

                            @if (userRole == (int)UserRole.Employee)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="LeaveRequest" asp-action="Apply">Apply Leave</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="LeaveRequest" asp-action="List">View My Leaves</a>
                                </li>
                            }

                            @if (userRole == (int)UserRole.Manager)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="LeaveApproval" asp-action="Index">Leave Approval Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="LeaveRequest" asp-action="Apply">Apply Leave</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="LeaveRequest" asp-action="List">View My Leaves</a>
                                </li>
                            }

                            @if (userRole == (int)UserRole.Admin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="ManageUsers">Manage User Roles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="AllLeaves">All Leaves

                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
                        {
                            var userRole = HttpContextAccessor.HttpContext.Session.GetInt32("UserRole");
                            var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName");

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <strong>@userName</strong> (@((UserRole)userRole))
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Profile">View Profile</a></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="User" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            if(Context.GetRouteData().Values["action"].ToString() != "Login"){
                                <li class="nav-item">
                                    <a class="nav-link btn btn-primary text-white" asp-controller="User" asp-action="Login">Login</a>
                                </li>
                            }
                            if (Context.GetRouteData().Values["action"].ToString() != "Register")
							{
								<li class="nav-item">
									<a class="nav-link btn btn-secondary text-white" asp-controller="User" asp-action="Register">Register</a>
								</li>
							}
                            
                            
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Neosoft_LeaveManagement - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
