@model Neosoft_LeaveManagement.ViewModels.LeaveBalanceViewModel

<div class="card shadow-sm border-3 rounded-3 mb-3 p-3 bg-light">
    <div class="d-flex align-items-center">
        <div class="me-3">
            <i class="bi bi-calendar-check text-primary" style="font-size: 2rem;"></i>
        </div>
        <div>
            <h5 class="fw-bold text-dark mb-1">Leave Balance</h5>
            <p class="mb-0 text-muted">
                <i class="bi bi-calendar3"></i> <strong>Total:</strong> @Model.TotalLeaveDays days
            </p>
            <p class="mb-0 text-muted">
                <i class="bi bi-clock-history"></i> <strong>Remaining:</strong> @Model.RemainingLeaveDays days
            </p>
        </div>
    </div>
</div>
