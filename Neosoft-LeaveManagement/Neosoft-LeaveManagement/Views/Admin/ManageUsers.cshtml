@using Neosoft_LeaveManagement.Constants
@model IEnumerable<Neosoft_LeaveManagement.Models.User>

<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @if (user.Role == UserRole.Employee)
                    {
                        <form asp-action="PromoteToManager" method="post">
                            <input type="hidden" name="userId" value="@user.UserId" />
                            <button type="submit" class="btn btn-primary">Promote to Manager</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
